<view class="container">
  <view class="brand-list">
    <navigator url="../brandDetail/brandDetail?id={{item.brandId}}" class="item" wx:for="{{brandList}}" wx:key="id">
      <view class="img-bg">
        <image src="{{item.brandPicUrl}}" background-size="cover"></image>
      </view>
      <view class="txt-box">
        <view class="line">
          <text class="name">{{item.brandName}}</text>
          <text class="s">|</text>
          <text class="price">{{item.brandFloorPrice}}元起</text>
        </view>
      </view>
    </navigator>
  </view>
</view>