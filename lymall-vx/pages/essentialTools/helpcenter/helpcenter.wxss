/* pages/essential/helpcenter/helpcenter.wxss */
.problem-box {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  padding: 0rpx 30rpx;
  background: #fff;
}

.problem-box-item {
  height: auto;
  overflow: hidden;
  padding-bottom: 25rpx;
}

.spot-text {
  float: left;
  display: block;
  height: 10rpx;
  width: 10rpx;
  background: #b4282d;
  border-radius: 50%;
  margin-top: 11rpx;
}

.question-text {
  float: left;
  line-height: 30rpx;
  padding-left: 8rpx;
  display: block;
  font-size: 26rpx;
  padding-bottom: 15rpx;
  color: #303030;
  width: 680rpx;
}

.answer-text {
  line-height: 36rpx;
  padding-left: 16rpx;
  font-size: 26rpx;
  color: #787878;
  display: block;
}

.botton-box {
  width: 750rpx;
  height: 108rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.botton-box view {
  height: 108rpx;
  width: 50%;
  float: left;
  font-size: 29rpx;
  color: #333;
  text-align: center;
  line-height: 108rpx;
}

.botton-box .prePage {
  border-right: 1px solid #D9D9D9;
}

.botton-box .prePageDisabale{
  text-align: center;
  color: #777777;
}

.botton-box .nextPageDisabale{
  text-align: center;
  color: #777777;
}